@model IEnumerable<GestionForrajeria.ViewModels.Mercaderia.MercaderiaIndexViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <div class="row justify-content-center">
        <h1 >MERCADERIA</h1>
    </div>

    <div class="row justify-content-center">
        <a href="@Url.Action("CreateMercaderiaForm", "Mercaderia")">AGREGAR MERCADERIA</a>
    </div>
</div>



    <table class="table table-sm w-auto text-nowrap m-auto">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Categoria)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrecioPorKg)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrecioPor100gr)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categoria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrecioPorKg)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrecioPor100gr)
                    </td>
                    <td>
                    </td>
                </tr>
            }
        </tbody>
    </table>

